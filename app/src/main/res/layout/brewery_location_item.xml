<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingLeft="@dimen/list_image_margin_left"
    android:paddingRight="@dimen/list_item_content_margin_right">
    
    <ImageView
        android:id="@+id/brewery_icon"

        android:layout_width="@dimen/list_image_height"
        android:layout_height="@dimen/list_image_height"
        android:layout_marginRight="@dimen/list_image_margin_left"

        android:layout_centerVertical="true"

        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/brewery_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:layout_alignTop="@+id/brewery_icon"
        android:layout_toRightOf="@id/brewery_icon"

        android:text="Brewery"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/list_item_text_primary"
        android:textSize="@dimen/list_item_text_size_primary"/>

    <TextView
        android:id="@+id/brewery_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/brewery_icon"
        android:layout_below="@+id/brewery_name"

        android:text="Info"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/list_item_text_secondary"
        android:textSize="@dimen/list_item_text_size_secondary"/>

</RelativeLayout>