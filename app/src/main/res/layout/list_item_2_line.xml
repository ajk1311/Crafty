<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_2_line">
    
    <ImageView
        android:id="@+id/brewery_icon"

        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_marginLeft="@dimen/list_item_icon_padding_left"

        android:layout_centerVertical="true"

        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/brewery_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:layout_alignTop="@+id/brewery_icon"
        android:layout_marginLeft="@dimen/list_item_content_padding_left_2_line"
        android:layout_marginRight="@dimen/list_item_content_padding_right"

        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/list_item_text_primary"
        android:textSize="@dimen/list_item_text_line_1"/>

    <TextView
        android:id="@+id/brewery_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/brewery_name"
        android:layout_alignLeft="@+id/brewery_name"
        android:layout_marginRight="@dimen/list_item_content_padding_right"

        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/list_item_text_secondary"
        android:textSize="@dimen/list_item_text_line_2"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_item_divider"
        android:layout_marginLeft="@dimen/list_item_content_padding_left_2_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>