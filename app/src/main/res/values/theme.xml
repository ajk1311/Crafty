<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="theme_default_primary">@color/amber</color>
    <color name="theme_default_primary_light">@color/amber_light</color>
    <color name="theme_default_primary_dark">@color/amber_dark</color>
    <color name="theme_default_accent">@color/brown</color>
    <color name="theme_default_accent_light">@color/brown_light</color>
    <color name="theme_default_accent_dark">@color/brown_dark</color>

    <color name="theme_default_text_primary">@android:color/white</color>

    <color name="theme_background">@android:color/white</color>

    <declare-styleable name="Theme.Crafty.Base">
        <attr name="actionBarIconColor" format="color"/>
    </declare-styleable>

    <style name="Theme.Crafty.Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:colorBackground">@color/theme_background</item>

        <item name="actionBarIconColor">@android:color/white</item>

        <item name="android:actionBarStyle">@style/Widget.Crafty.Light.ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>

        <item name="android:dropDownListViewStyle">@style/Widget.Crafty.ListView.DropDown</item>
    </style>

    <style name="Theme.Crafty.Main" parent="Theme.Crafty.Base">
        <item name="android:windowContentOverlay">@null</item>
    </style>




</resources>